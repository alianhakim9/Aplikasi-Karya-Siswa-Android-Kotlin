<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/foto_profil_shimmer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/light_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tv_nama_siswa_shimmer"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:background="@color/light_gray"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/foto_profil_shimmer"
                app:layout_constraintTop_toTopOf="@id/foto_profil_shimmer" />

            <View
                android:id="@+id/img_verified_shimmer"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_nama_siswa_shimmer"
                app:layout_constraintStart_toEndOf="@id/tv_nama_siswa_shimmer"
                app:layout_constraintTop_toTopOf="@id/tv_nama_siswa_shimmer" />

            <View
                android:id="@+id/tv_nisn_shimmer"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/light_gray"
                app:layout_constraintStart_toStartOf="@+id/tv_nama_siswa_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/tv_nama_siswa_shimmer" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/item_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:background="@color/light_gray"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_avatar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <View
                android:id="@+id/item_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/light_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/item_3"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="@+id/item_2"
                app:layout_constraintStart_toEndOf="@id/item_2"
                app:layout_constraintTop_toTopOf="@id/item_2" />

            <View
                android:id="@+id/item_4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:background="@color/light_gray"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_2" />

            <View
                android:id="@+id/item_5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/item_6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:id="@+id/item_7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:id="@+id/item_8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

    </LinearLayout>

</LinearLayout>