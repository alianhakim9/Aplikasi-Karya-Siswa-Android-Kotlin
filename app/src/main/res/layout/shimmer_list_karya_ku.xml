<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/cv_1_shimmer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/textView3_shimmer"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@id/cv_1_shimmer"
        app:layout_constraintTop_toBottomOf="@id/cv_1_shimmer" />

    <View
        android:id="@+id/tv_lihat_semua_karya_tulis_shimmer"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/textView3_shimmer"
        app:layout_constraintEnd_toEndOf="@+id/cv_1_shimmer"
        app:layout_constraintTop_toTopOf="@+id/textView3_shimmer" />

    <View
        android:id="@+id/item_1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/tv_lihat_semua_karya_tulis_shimmer"
        app:layout_constraintStart_toStartOf="@+id/textView3_shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_lihat_semua_karya_tulis_shimmer" />

    <View
        android:id="@+id/item_2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/tv_lihat_semua_karya_tulis_shimmer"
        app:layout_constraintStart_toStartOf="@+id/textView3_shimmer"
        app:layout_constraintTop_toBottomOf="@id/item_1" />

    <View
        android:id="@+id/textView4_shimmer"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@id/cv_1_shimmer"
        app:layout_constraintTop_toBottomOf="@id/item_2" />

    <View
        android:id="@+id/textView5_shimmer"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/textView4_shimmer"
        app:layout_constraintEnd_toEndOf="@+id/cv_1_shimmer"
        app:layout_constraintTop_toTopOf="@+id/textView4_shimmer" />


    <View
        android:id="@+id/item_3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@+id/textView3_shimmer"
        app:layout_constraintTop_toBottomOf="@id/textView4_shimmer" />

    <View
        android:id="@+id/item_4"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/item_3"
        app:layout_constraintTop_toBottomOf="@id/textView4_shimmer" />

    <View
        android:id="@+id/item_5"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@id/textView5_shimmer"
        app:layout_constraintStart_toEndOf="@+id/item_4"
        app:layout_constraintTop_toBottomOf="@id/textView4_shimmer" />


</androidx.constraintlayout.widget.ConstraintLayout>