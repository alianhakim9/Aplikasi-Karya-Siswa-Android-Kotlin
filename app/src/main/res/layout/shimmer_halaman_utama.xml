<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/foto_profil_shimmer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_nama_shimmer"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/foto_profil_shimmer"
        app:layout_constraintTop_toTopOf="@id/foto_profil_shimmer" />

    <View
        android:id="@+id/tv_sapaan_shimmer"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@id/tv_nama_shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_shimmer"
        tools:text="Selamat pagi" />

    <View
        android:id="@+id/tv_category_karya_shimmer"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@+id/foto_profil_shimmer"
        app:layout_constraintTop_toBottomOf="@id/foto_profil_shimmer" />

    <View
        android:id="@+id/cv_karya_citra_shimmer"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toStartOf="@+id/cv_karya_tulis_shimmer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_category_karya_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_karya_shimmer" />

    <View
        android:id="@+id/cv_karya_tulis_shimmer"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/tv_nama_shimmer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cv_karya_citra_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_karya_shimmer" />

    <View
        android:id="@+id/tv_karya_terbaru_shimmer"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@+id/cv_karya_citra_shimmer"
        app:layout_constraintTop_toBottomOf="@id/cv_karya_citra_shimmer" />

    <View
        android:id="@+id/item_1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        android:paddingBottom="100dp"
        app:layout_constraintEnd_toEndOf="@id/cv_karya_tulis_shimmer"
        app:layout_constraintStart_toStartOf="@+id/tv_karya_terbaru_shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_karya_terbaru_shimmer" />

    <View
        android:id="@+id/item_2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        android:paddingBottom="100dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_karya_tulis_shimmer"
        app:layout_constraintStart_toStartOf="@+id/tv_karya_terbaru_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/item_1" />

    <View
        android:id="@+id/item_3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        android:paddingBottom="100dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_karya_tulis_shimmer"
        app:layout_constraintStart_toStartOf="@+id/tv_karya_terbaru_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/item_2" />

    <View
        android:id="@+id/item_4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        android:paddingBottom="100dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_karya_tulis_shimmer"
        app:layout_constraintStart_toStartOf="@+id/tv_karya_terbaru_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/item_3" />


</androidx.constraintlayout.widget.ConstraintLayout>